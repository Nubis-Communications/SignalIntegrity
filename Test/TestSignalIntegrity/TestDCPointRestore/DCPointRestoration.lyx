\begin_layout Title
DC Point Restoration
\end_layout

\begin_layout Author
Peter J.
 Pupalaikis
\end_layout

\begin_layout Date
12/23/20
\end_layout

\begin_layout Section
Summary
\end_layout

\begin_layout Standard

\lang american
\begin_inset FormulaMacro
\newcommand{\Re}{\operatorname{Re}}
{\operatorname{Re}}
\end_inset


\begin_inset FormulaMacro
